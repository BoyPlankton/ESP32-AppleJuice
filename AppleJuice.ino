void setup() {
  Serial.begin(115200);
  Serial.println("Starting ESP32 BLE");

  BLEDevice::init("");
  BLEServer *pServer = BLEDevice::createServer();

  pAdvertising = pServer->getAdvertising();
}

void loop() {
  int randomDevice = random(29);
  int randomDelay = random(10,120);

  BLEAdvertisementData oAdvertisementData = BLEAdvertisementData();

  Serial.printf("Advertising - %d %s %d\n", randomDevice, devices[randomDevice].name, devices[randomDevice].size);

  pAdvertising->setAdvertisementType(ADV_TYPE_SCAN_IND);
  oAdvertisementData.addData(std::string((char*)devices[randomDevice].data, devices[randomDevice].size));
  pAdvertising->setAdvertisementData(oAdvertisementData);
  
  pAdvertising->start();
  delay(delaySeconds * 1000);
  pAdvertising->stop();

  Serial.printf("Sleeping - %d\n", randomDelay);
  delay(randomDelay * 1000);
}